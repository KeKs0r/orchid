{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orchid/e2e-tests": ["packages/e2e-tests/src/index.ts"],
      "@orchid/inspector-ui": ["packages/inspector-ui/src/index.ts"],
      "@orchid/logger-terminal": ["packages/logger-terminal/src/index.ts"],
      "@orchid/plugin-cache": ["packages/plugin-cache/src/index.ts"],
      "@orchid/plugin-cache-file": ["packages/plugin-cache-file/src/index.ts"],
      "@orchid/plugin-opentelemetry": [
        "packages/plugin-opentelemetry/src/index.ts"
      ],
      "@orchid/storage-nedb": ["packages/storage-nedb/src/index.ts"],
      "@orchid/util": ["packages/util/src/index.ts"],
      "orchid": ["packages/orchid/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
